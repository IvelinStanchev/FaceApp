<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/redColor</item>
        <item name="colorPrimaryDark">@color/redColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:ems">10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="RegisterEditTextStyle">
        <item name="android:ems">10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TextInputErrorStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProgressBarColor">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CalendarView">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
